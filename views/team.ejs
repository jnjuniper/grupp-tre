<!DOCTYPE html>
<html>
  <head>
    <title>Meet the Team</title>
    <link
      rel="icon"
      href="/images/logo.svg"
      media="(prefers-color-scheme: light)"
    />
    <link
      rel="icon"
      href="/images/logo-white.svg"
      media="(prefers-color-scheme: dark)"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
      body {
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body>
<header><%- include('partials/header') %></header>

    <section class="py-10 bg-gray-100 pt-40">
      <div class="container mx-auto px-4">
        <h1 class="text-center text-4xl font-bold mb-8">Meet Our Team</h1>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <% teamMembers.forEach(member => { %>
          <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <img
              src="<%= member.image %>"
              alt="<%= member.name %>"
              class="h-56 w-full object-cover"
            />
            <div class="p-6">
              <h2 class="text-2xl font-bold mb-2"><%= member.name %></h2>
              <p class="text-sm text-gray-600 mb-2">Age: <%= member.age %></p>
              <p class="text-sm text-gray-600 mb-2">Title: <%= member.title %></p>
              <p class="text-sm text-gray-600 mb-4">
                Skills: <%= member.skills.join(', ') %>
              </p>
              <p class="text-gray-700 mb-4"><%= member.bio %></p>
              <div class="text-sm">
                <p>Email: <a href="mailto:<%= member.email %>" class="text-blue-500 hover:underline"><%= member.email %></a></p>
                <p>Phone: <%= member.phone %></p>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <footer><%- include('partials/footer') %></footer>
  </body>
</html>
