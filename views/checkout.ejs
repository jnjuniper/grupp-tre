<!DOCTYPE html>
<html>
  <head>
    <title>Checkout</title>
  </head>
  <body>
    <%- include("partials/header") %>

    <main class="container mx-auto p-6 mt-28 flex-grow">
    
      <div class="flex flex-col md:flex-row gap-8">
       
        <div class="w-full md:w-2/3 bg-white shadow rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-4">Your Information</h2>
          <form id="checkout-form">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="email" class="block text-sm font-medium">Email address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                  required
                />
              </div>
              <div>
                <label for="postal-code" class="block text-sm font-medium">Postal code</label>
                <input
                  type="text"
                  id="postal-code"
                  name="postalCode"
                  class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                  required
                />
              </div>
            </div>
            <div class="mt-4">
              <label for="address" class="block text-sm font-medium">Address</label>
              <input
                type="text"
                id="address"
                name="address"
                class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                  required
              />
            </div>
            <div class="grid grid-cols-2 gap-4 mt-4">
              <div>
                <label for="first-name" class="block text-sm font-medium">First name</label>
                <input
                  type="text"
                  id="first-name"
                  name="firstName"
                  class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                  required
                />
              </div>
              <div>
                <label for="last-name" class="block text-sm font-medium">Last name</label>
                <input
                  type="text"
                  id="last-name"
                  name="lastName"
                  class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                  required
                />
              </div>
            </div>
            <div class="mt-4">
              <label for="phone" class="block text-sm font-medium">Mobile phone</label>
              <input
                type="text"
                id="phone"
                name="phone"
                class="mt-1 block w-full border border-gray-300 rounded-md p-2 focus:ring-2 focus:ring-blue-500 focus:outline-none"
                  required
              />
            </div>

           
            <div class="mt-6">
              <h3 class="text-lg font-semibold mb-2">Payment Method</h3>
              <div class="flex flex-col space-y-2">
                <label class="flex items-center">
                  <input
                    type="radio"
                    name="paymentMethod"
                    value="bill"
                    class="form-radio text-blue-500 focus:ring-blue-500"
                    required
                  />
                  <span class="ml-2">Bill</span>
                </label>
                <label class="flex items-center">
                  <input
                    type="radio"
                    name="paymentMethod"
                    value="paypal"
                    class="form-radio text-blue-500 focus:ring-blue-500"
                  />
                  <span class="ml-2">PayPal</span>
                </label>
                <label class="flex items-center">
                  <input
                    type="radio"
                    name="paymentMethod"
                    value="card"
                    class="form-radio text-blue-500 focus:ring-blue-500"
                  />
                  <span class="ml-2">Card</span>
                </label>
                <label class="flex items-center">
                  <input
                    type="radio"
                    name="paymentMethod"
                    value="monthly"
                    class="form-radio text-blue-500 focus:ring-blue-500"
                  />
                  <span class="ml-2">Monthly Payment</span>
                </label>
              </div>
            </div>
          </form>
        </div>

      
        <div class="w-full md:w-1/3 bg-white shadow-lg rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-4">Checkout Overview</h2>
          <div id="cart-overview">
            <% cart.forEach((item) => { %>
            <div class="flex items-center justify-between border-b py-4">
              <div class="flex items-center space-x-4">
                <img
                  src="<%= item.image %>"
                  alt="<%= item.name %>"
                  class="h-16 w-16 object-cover rounded-md"
                />
                <div>
                  <p class="font-semibold"><%= item.name %></p>
                  <p class="text-sm text-gray-500">Quantity: <%= item.quantity %></p>
                  <p class="text-sm text-gray-500">$<%= item.price.toFixed(2) %></p>
                </div>
              </div>
              <p class="font-bold">$<%= (item.price * item.quantity).toFixed(2) %></p>
            </div>
            <% }) %>
          </div>
          <div class="mt-4 text-lg font-bold flex justify-between">
            <span>Total:</span>
            <span>$<%= total %></span>
          </div>
          <button
            id="pay-button"
            class="mt-4 w-full bg-blue-500 text-white py-2 rounded-md text-lg font-semibold hover:bg-blue-600 transition-colors"
          >
            Pay Purchase
          </button>
          <script>
            document.getElementById("pay-button").addEventListener("click", function () {
              alert("Thank you for your purchase!");
              window.location.href = "/";
            });
          </script>
        </div>
      </div>
    </main>

    <%- include("partials/footer") %>
  </body>
</html>
